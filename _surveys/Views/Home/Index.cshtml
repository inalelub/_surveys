	td {
		border: 1px solid rgb(160 160 160);
		padding: 8px 10px;
	}

	thead tr th {
		text-align: center;
	}

	tbody tr td {
		text-align: center;
	}
	
	/* DIV SUCCESS */
	
	.success {
